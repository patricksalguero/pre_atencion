.b40h-block
	padding-left 25px
	padding-right 25px
	padding-top 40px
	padding-bottom 30px
	border 1px solid #e4e5e6
	box-sizing border-box
	border-radius 35px 0px 35px 0px
	position relative
	margin-top 30px
.b40h-subtitle
	width 365px
	font-size 24px
	text-align center
	display inline-block
	background blanco
	position absolute
	top -15px
	left 0
	right 0
	margin auto
.b40h-precios
	width 380px
	display inline-block
	vertical-align top
	text-align center
	margin-left 65px
.b40h-inner-item
	font-size 0
	&.border
		.b40h-bt
			background none
			border 1px solid c-5
			color c-5 
		.b40h-bt.active
			background c-5	
			color blanco
.b40h-bt
	display inline-block
	vertical-align middle   
	font-size 24px
	font-family t-1
	width 125px
	height 50px
	line-height 50px
	color blanco
	background #8e8f90
	border-radius 0px 8px 8px 0px
.b40h-bt:first-child
	border-radius 8px 0px 0px 8px       
.b40h-bt.active
	background c-5
	

.b40h-campo
	width 317px
	position relative
	margin auto
	margin-top 50px 
.span-signo
	position absolute
	right 100%
	top 0
	bottom 0
	height 44px
	display inline-block
	font-size 40px
	font-family t-2
	line-height 40px
	margin-right 8px
.b40h-llenar
	width 317px
	line-height 58px
	height 58px 
	background url('../img/bg-input40.jpg') top center repeat-x 
	border-radius 8px
	padding 0px 10px 
	box-sizing border-box
	border none
	text-shadow 1px 1px 1px white
	color c-0   
	text-align right
	display block
	font-size 40px
	font-family t-1


//tab

.content-tab
	position relative
	.item-tab.active
		visibility visible
		position relative
		opacity 1
	
	.item-tab
		visibility hidden
		position absolute
		top 0
		left 0
		opacity 0	