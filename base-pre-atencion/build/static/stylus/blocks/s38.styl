.b38h-title
	h3
		font-size 22px
		margin-bottom 0
.b38h-form
	.b38h-title
		text-align right
.b38h-input
	height 50px
	line-height 50px
	background-color #fff
	position relative
	input
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		width 100%
		height 100%
		opacity 0
	label
		display block
		text-align left
		input[type="checkbox"], input[type="radio"]
			width 23px
			height 23px
		span
			text-align right
			color #4e4f53

	.b38h-list
		display table-cell		
		vertical-align middle
		height 56px
		box-sizing border-box
		border 3px  solid #e4e5e6
		border-radius 15px
		padding 0 15px
		&:after
			content ""
			width 25px
			height 25px
			position absolute
			top 0
			bottom 0
			margin auto
			left 20px
			background url('../img/bg-chk-2.png') no-repeat center top

.b38h-input
	input:checked 
		& ~ div
			background-color c-9
			border-color c-9
			span
				color white
			&:after
				background-position 0px -25px
.b38h-checkbox, .b38h-list
	display inline-block
	vertical-align middle
	
.b38h-monto
	width 100%

.b38h-list
	font-size 0
	span
		width 130px
		display inline-block
		vertical-align top
		color white
		font-size 22px
		box-sizing border-box
		&:nth-child(1)
			width 200px




