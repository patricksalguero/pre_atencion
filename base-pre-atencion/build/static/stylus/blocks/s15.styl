.b15-cnt
	border 1px solid c-1
	box-sizing border-box
	
.b15-title
	font-size 0
	text-align center
	padding 15px 20px
	h3
		color c-1
		font-family t-1
		font-size 32px
		margin-bottom 0
	
.b15-text
	background-color c-4
	text-align center
	padding 15px 20px
	h4
		color c-6
		font-family t-1
		font-size 30px
		font-weight normal
		margin-bottom 15px

.b15-list
	font-size 0
	li
		display inline-block
		vertical-align top
		width 40%
		line-height 33px
		font-size 22px
		text-align left
		&:first-child
			color c-6
			text-align right
			margin-right 15px
	strong
		font-family t-2
		font-weight normal
	i
		color c-5
		font-family t-2
		font-style normal

