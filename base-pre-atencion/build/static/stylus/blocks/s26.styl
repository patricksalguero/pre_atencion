t-5 = 'arial', sans-serif

icomoon = 'icomoon'

.b26h-title
	h3
		font-size 22px
		margin-bottom 0

.b26h-input
	height 50px
	line-height 50px
	background-color c-9
	
	
	label
		display block
		text-align right
		input[type="checkbox"], input[type="radio"]
			width 23px
			height 23px

.b26h-input
	background-color white
	position relative
	.b26h-list
		border 1px solid #E4E5E6
		height 50px
		width 400px
		display table-cell
		vertical-align middle
		padding 0 15px
		border-radius 15px
		span
			color c-0
		&:after
			content ""
			width 25px
			height 25px
			position absolute
			top 0
			bottom 0
			left 20px
			margin auto
			background url('../img/bg-chk-2.png') no-repeat center top
	input
		position absolute
		top 0
		left 0
		bottom 0
		right 0
		margin auto
		width 100%
		height 100%
		opacity 0
		

	input:checked 
		& ~ div
			background c-9
			border-color c-9
			&:after
				background-position 0px -25px
			span
				color white
.b26h-checkbox, .b26h-list
	display inline-block
	vertical-align middle

.b26h-monto
	width 100%
		
.b26h-list
	font-size 0
	span
		width 110px
		display inline-block
		vertical-align top
		color white
		font-size 22px
		box-sizing border-box
		&:nth-child(1)
			width 100px

.b26h-item
	text-align right
	box-sizing border-box
	padding-right 15px
	ul
		font-size 0
		text-align right
	li
		display inline-block
		vertical-align top
		color c-5
		font-size 22px
		width 130px
		span
			color c-2
		strong
			font-family t-1
			font-weight normal	
			
		&:first-child
			width 245px
			margin-right 10px

.b26h-mensaje
	line-height 1
	color c-2
	font-size 22px
	box-sizing border-box
	text-align left
	img
		position absolute
		top 0
		left 0
	&.b26h-gris
		color c-0
		text-decoration underline
		








