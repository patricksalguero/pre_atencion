.b32h
	text-align center
	width 286px
.b32h-botonera-check
	background c-3
	margin-bottom 20px
	text-align left
	border-radius 5px
	label
		width 286px
		display table-cell
		vertical-align middle
		height 64px
		padding 0px 20px
	&.active
		background c-1
		color blanco
.b32h-input, .b32h-span
	display inline-block
	vertical-align middle
.b32h-span
	width 170px
	font-size 22px	
	margin-left 15px
		


///Prueba
.b32h-botonera-check 
	input
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		width 100%
		height 100%
		opacity 0
		pointer-events pointer
	label
		padding 0
		box-sizing border-box
		
	span
		height 64px
		width 286px
		color white
		font-family t-1
		display table-cell
		vertical-align middle
		margin-left 0
		padding 0px 20px 0px 60px
		box-sizing border-box
		border-radius 5px
		line-height 25px
		&:after
			content ""
			width 32px
			height 32px
			background url('../img/bg-chk.png') no-repeat center top
			display block 
			position absolute
			top 0
			bottom 0
			left 15px
			margin auto
.eventCheck, .dualEventCheck
	input:checked 
		& ~ span
			background c-9
			&:after
				background-position center -32px