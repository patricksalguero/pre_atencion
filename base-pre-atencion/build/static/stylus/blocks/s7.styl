
.b7.alert,.b8.alert
	.alerta-items
		display block
		margin-top 15px
	.wrapper-cuentas-item.border
		position relative
		&:before
			content ""
			position absolute
			top -3px
			left -3px
			margin-left -1%
			margin-top -2%
			border 3px solid c-2
			width 102%
			height 110%
			border-radius 10px
.wrapper-cuentas
	width 820px
.wrapper-cuentas-item
	width 265px
	height 110px
	display inline-block
	background-color #e4e5e6
	vertical-align top
	border-radius 8px 0px 
	position relative
	margin-bottom 10px
	margin-top 10px
	margin-left 9px
	img
		position absolute
		top 18px
		left 28px
		margin auto
		width 38px
		height 37px
		
	&:nth-child(3n+1)
		margin-left 0
.wrapper-cuentas-content
	box-sizing border-box
	padding-left 80px
	h4
		margin 0
		padding 0
		font-size 22px
		margin-top 13px
	span, strong
		display block
		color c-5
	span
		font-size 15px
	strong 
		line-height 1
		font-size 30px
		font-family t-1
		font-weight normal

.alerta-items
	text-align center
	display none 	
	img, span
		display inline-block
		vertical-align middle
	span
		color c-2
		font-size 20px