.wrapper-mch
	width 1274px
	background url('../img/super-bg.png') no-repeat center center
	height 518px
.small-mch
	width 315px
	vertical-align middle
.large-mch
	width 955px
.g2-title
	display inline-block
.small-mch,
.large-mch
	position relative
	text-align center


.content-small-mch
	position relative
	padding-left 70px
	box-sizing border-box
	text-align left
	img
		position absolute
		top 0
		left 20px
	h4
		font-size 22px
		margin-bottom 0
	span
		font-size 15px
		color c-5
		display block
	p
		font-size 25px
		font-family t-2
		color c-5
.content-large-mch
	width 530px
	background #E4E5E6
	padding 35px 0
	position relative
	margin-top 60px

.item-btn
	display inline-block
	margin 0 10px
.gc-title
	position absolute
	top -18px
	left 0
	right 0
	text-align center
	h2
		margin-bottom 0
		display inline-block
		color c-5
		font-size 24px
		font-family t-1
		padding 0 10px
		background white
		font-weight normal
		box-shadow 0px 12px 0px #F6F6F6 inset