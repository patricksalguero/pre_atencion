// Colors idendity
c-0 = #4e4f53
.b1
	text-align center
	
.b1-title
	h1
		color c-1
		font-size 120px
		margin-bottom 0

.b1-text
	display inline-block
	vertical-align middle
	font-family t-1
	font-size 27px
	position relative
	padding 0 54px
	margin-bottom 20px
	p
		margin-bottom 0
	&:before, &:after
		content ""
		width 22px
		height 1px
		background-color #d2d2d2
		position absolute
		top 50%
		left 0
		margin-top -0.5px
	&:after
		left auto
		right 0
