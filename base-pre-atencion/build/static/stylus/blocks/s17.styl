.b17
	height 28px
.anterior,
.siguiente
	position absolute
	top 0
	img, span, a
		display inline-block
		vertical-align middle
	a
		font-size 24px
		font-family t-1
		color c-5
.anterior
	left 0
	img
		margin-right 10px
.siguiente
	right 0
	img
		margin-left 10px

.pager
	width 150px
	margin auto
	p, span
		margin 0
		display inline-block
		font-size 20px
		font-family t-1
	span
		width 24px
		height 24px
		border-radius 50%
		text-align center
		font-size 20px
		font-family t-1
		color white
		line-height 21px
		margin 0 3px
		&.act
			background-color c-1
		&.desac
			background-color c-0