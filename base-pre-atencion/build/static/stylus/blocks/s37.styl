blanco = #fff
negro = #000
// Fonts
t-0 = 'Omnes-Regular', sans-serif

t-1 = 'Omnes-Medium', sans-serif
t-2 = 'omnessemibold', sans-serif
t-3 = 'omnesbold', sans-serif
t-4 = 'Omnes-Light', sans-serif
t-5 = 'arial', sans-serif

icomoon = 'icomoon'

.b37h-title
	h3
		font-size 22px
		margin-bottom 0

.b37h-input
	height 50px
	line-height 50px
	position relative
	label
		display block
		text-align left
	input
		position absolute
		top 0
		left 0
		right 0
		bottom 0
		margin auto
		width 100%
		height 100%	
		opacity 0
	input:checked
		& ~ div
			background-color c-9
			border-color c-9
			span
				color white 
			&:after
				background-position 0px -25px
.b37h-list
	display table-cell
	vertical-align middle
	border 3px  solid #e4e5e6
	border-radius 15px
	padding 0 15px 0px 50px
	margin-left 0
	width 600px
	&:after
		content ""
		width 25px
		height 25px
		position absolute
		top 0
		bottom 0
		left 20px
		margin auto
		background url('../img/bg-chk-2.png') no-repeat center top
.b37h-checkbox
	display inline-block
	vertical-align middle

.b37h-monto
	width 100%

.b37h-list
	font-size 0
	span
		width 100px
		display inline-block
		vertical-align top
		font-size 22px
		box-sizing border-box
		&:nth-child(1)
			width 220px

.b37h-item
	text-align right
	box-sizing border-box
	padding-right 15px
	ul
		font-size 0
		text-align right
	li
		display inline-block
		vertical-align top
		color c-5
		font-size 22px
		width 130px
		span
			color c-2
		strong
			font-family t-1
			font-weight normal

		&:first-child
			width 215px
			margin-right 10px

.b37h-mensaje
	line-height 1
	color c-2
	font-size 22px
	box-sizing border-box
	text-align left
	img
		position absolute
		top 0
		left 0
	&.b37h-gris
		color c-0
		text-decoration underline
