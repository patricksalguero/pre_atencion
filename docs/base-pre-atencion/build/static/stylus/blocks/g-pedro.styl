.btn-slider
	width 181px 
	height 83px
	display inline-block
	position relative
	box-sizing border-box
	padding-left 15px
	&:after
		content ""
		height 78px 
		width 1px
		position absolute
		left 0
		bottom 0
		top 0
		margin auto
		background #e4e5e6
	.br-left
		height 78px 
		width 1px
		position absolute
		left 0
		bottom 0
		top 0
		margin auto
		background #e4e5e6		
		
	&:first-child
		&:after
			content none
			display none
	&.active
		background c-7
		border-top 1px solid #e4e5e6
		border-right 1px solid #e4e5e6
		border-left 1px solid #e4e5e6

		&:first-child
			&:after
				content none
				display none
		.close-btn
			display block
.item-btn-slider
	display inline-block
	vertical-align bottom
	padding-top 10px
	p
		margin 0
		font-size 22px
		font-family t-1
		line-height 1
	strong
		font-size 20px
		font-family t-1
		color c-5
		font-weight normal
.close-btn
	width 20px
	height 20px
	background url(../img/close-blue.png) no-repeat center center
	display block
	position absolute
	top 3px
	right 3px
	display none
	z-index 10