	//modificaciones carrusel - pestaña activa
		
.control-slider		 
	width 125px
	height 83px
	background-color #fff
	bottom 1px
	left 0
	position absolute
	z-index 10
	display none
	.bt-prev, .bt-next
		position absolute
		top 10px
		width 58px
		height 59px
		a 
			height 59px
			display block
			border-radius 8px
			&.disabled
				opacity 0.4
			
	.bt-prev
		border 1px solid c-8
		border-radius 8px
		left 0
		a 
			background url(../img/img-arrow-prev.png) no-repeat top center
			
	.bt-next
		right 0
		border 1px solid c-8
		border-radius 8px
		a 
			background url(../img/img-arrow-next.png) no-repeat top center
				
