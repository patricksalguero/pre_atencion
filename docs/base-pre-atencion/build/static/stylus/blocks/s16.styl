.b16
	position relative
	.bg-left, .bg-right
		position absolute
		top 0
		width 50%
		height 100%

	.bg-left
		background-color #fafafa
		left 0
	.bg-right
		background-color #fff
		right 0

	.b16-main
		position relative
		z-index 10


	.d-table
		display table

	.b16-controls
		width 235px
		display table-cell
		vertical-align top
		padding-top 50px
		font-size 18px
		color negro
		padding-right 50px
		text-align right

	.b16-novedad
		background-color blanco
		width 725px
		display table-cell
		vertical-align top
		box-sizing border-box
		padding 0 50px
		padding-top 50px
		padding-bottom 140px
		img
			margin-bottom 25px
			max-width 100%
			height auto

	.b16-title
		font-family t-1
		font-size 25px
		color negro
		line-height 25px
		font-weight normal
		margin-bottom 15px

	.b16-fecha
		font-size 17px
		font-family t-2
		color c-1
		margin-bottom 30px


	.btn-compartir
		margin-bottom 520px

	.w-fb
		width 37px
		height 37px
		display inline-block
		box-sizing border-box
		border-radius 100%
		background-color  c-1
		text-align center
		line-height 37px
		color blanco

	.btn-novedad
		a
			text-align center
			margin-bottom 15px

	.b16-descrip
		text-align justify

@media screen and (max-width:960px)
	.b16 .b16-controls
		padding-right 20px

	.b16 .b16-novedad
		padding-left 20px
		padding-right 20px

	.btn-novedad
		a
			font-size 14px

@media screen and (max-width:768px)
	.d-table
		display block
	.b16
		padding-bottom 50px
		.b16-controls, .b16-novedad
			width auto
			display block

		.bg-left, .bg-right
			display none

		.btn-compartir
			margin-bottom 0
			display none

		.b16-novedad
			padding 0

		.b16-descrip
			img
				display block
				margin auto
				margin-bottom 15px
		.btn-novedad
			text-align center

		.b16-title
			font-size 20px
@media screen and (max-width:480px)
	.b16
		padding-bottom 35px
		.b16-controls
			padding-top 40px
