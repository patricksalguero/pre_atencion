.g2
	padding-top 40px
	background-color c-7
	padding-bottom 105px
	box-sizing border-box

		
	.g2-main
		padding-top 95px
		background-color blanco
		padding-bottom 80px
		border 3px solid c-4
		border-radius 30px
		position relative
		&.radius 
			border-radius 30px 0px 30px 0px
		
	.g2-moneda
		text-align center
		ul
			border 2px solid c-5
			display inline-block
			border-radius 5px
			box-sizing border-box
			cf()
			li
				width 124px
				float left
				a 
					display block
					line-height 46px 
					color c-5
					font-size 24px
					font-family t-1 
					&.active
						background-color c-5
						color blanco
			li:last-child
				border-left 2px solid c-5
			li:first-child
				border-right 2px solid c-5				
	.g2-montos
		.btn-item
			margin-right 12px
			margin-bottom 10px
		.no-margin
			margin-right 0
	.g2-recomendacion		
		position absolute
		padding-left 50px
		font-size 24px
		top 90px
		left 520px
		font-family t-0
		line-height 25px
		&.g2-top
			top 0
		.g2-icon
			position absolute
			top 0
			left 0
			
			
		
			
		